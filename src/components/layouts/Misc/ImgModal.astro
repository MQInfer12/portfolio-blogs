---
import Button from '../../global/Button.astro';

interface Props {
  id: string;
  src: string;
}

const { id, src } = Astro.props;
---

<label for={id}><slot /></label>
<input type="checkbox" id={id} />
<div class="container">
  <label for={id} class="bg" />
  <div class="img-container">
    <label for={id} class="button">
      <Button noEvents primary identifier='button-close-modal' text='X' />
    </label>
    <img alt={id} src={src} class="img" />
  </div>
</div>

<style lang="scss">
  @import "/src/styles/variables";

  input {
    display: none;
  }
  input:not(:checked) + .container {
    pointer-events: none;
  }
  input:checked + .container {
    opacity: 1;
  }
  .container {
    position: fixed;
    inset: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    isolation: isolate;
    opacity: 0;
    transition: opacity 0.3s;
  }
  .bg {
    background-color: rgba(0, 0, 0, 0.3);
    position: fixed;
    inset: 0;
    z-index: -1;
  }
  .img-container {
    max-width: 750px;
    max-height: 480px;
    position: relative;
  }
  .img {
    width: 100%;
    height: 100%;
    border: 4px solid $primary-600;
  }
  .button {
    position: absolute;
    top: 20px;
    right: 20px;
  }
</style>