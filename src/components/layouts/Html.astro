---
import Footer from './Footer/Footer.astro';
import Cursor from './Misc/Cursor.astro';
import Navbar from './Navbar/Navbar.astro';

interface Props {
  title: string
}

const { title }: Props = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/src/assets/images/index/profile2.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/db678f56b4.js" crossorigin="anonymous"></script>
		<title>{ title } - Mauricio Molina</title>
	</head>
	<body>
		<Cursor />
		<Navbar />
		<main>
      <slot />
		</main>
		<Footer />
	</body>
</html>

<style lang="scss" is:global>
	@import '/src/styles/variables.scss';

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Work Sans';
		cursor: none;
	}

	html {
		scroll-behavior: smooth;
		scroll-padding: $navbar-height;
	}

	body {
		@include scrollbar();
	}

	main {
		margin-top: $navbar-height;
	}
</style>