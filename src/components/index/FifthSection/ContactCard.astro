---
import Link from "../../global/Link.astro";
import SocialContainer from "../FirstSection/SocialContainer.astro";
import ContactCardDescription from "./ContactCardDescription.astro";
import DataCard from "./DataCard.astro";
import langRender from "../../../utilities/langRender";
import getCurrentLang from "../../../utilities/getCurrentLang";
const lang = getCurrentLang(Astro.url.pathname);
---

<div class="content" id="contact">
  <div class="column left">
    <ContactCardDescription />
    <div class="data-cards">
      <DataCard
        title={langRender(lang, {
          es: "Dirección:",
          en: "Adress:",
        })}
        active
      >
        <i class="fa-solid fa-location-dot" slot="icon"></i>
        <address>Cochabamba, Pacata Alta</address>
      </DataCard>
      <DataCard
        title={langRender(lang, {
          es: "Mi correo electrónico:",
          en: "My email:",
        })}
      >
        <i class="fa-solid fa-location-dot" slot="icon"></i>
        <address>maummq@gmail.com</address>
      </DataCard>
      <DataCard
        title={langRender(lang, {
          es: "Llámame ahora:",
          en: "Call me now:",
        })}
      >
        <i class="fa-solid fa-location-dot" slot="icon"></i>
        <address>(591) 62629935</address>
      </DataCard>
    </div>
  </div>
  <div class="column right">
    <p>
      {
        langRender(lang, {
          es: "Presiona el botón de abajo y empecemos a construir tu sueño online hoy mismo.",
          en: "Click the button below and let's get started on building your online dream today.",
        })
      }
    </p>
    <Link
      text={langRender(lang, {
        es: "Envíame un correo",
        en: "Send me an email",
      })}
      to="mailto:maummq@gmail.com"
      primary
    >
      <i class="fa-regular fa-envelope" slot="right"></i>
    </Link>
    <p>
      {
        langRender(lang, {
          es: "O contáctame mediante mis redes sociales.",
          en: "Or contact me by my social media.",
        })
      }
    </p>
    <SocialContainer blank gap />
  </div>
</div>

<script>
  import changeActive from "../../../utilities/changeActive";
  const cards = document.querySelectorAll(".data-card-container");
  changeActive(cards, 2000);
</script>

<style lang="scss">
  @import "/src/styles/variables";

  .content {
    scroll-margin: 4rem;
    padding: 5.5rem;
    display: flex;
    gap: 6.5rem;
    box-shadow: $box-shadow-200;
    border-radius: 1rem;
    max-width: 100%;

    @media screen and (max-width: 960px) {
      gap: 3rem;
      padding: 2rem;
    }

    @media screen and (max-width: 825px) {
      flex-direction: column;
      align-items: center;
    }
  }

  .column {
    display: flex;
    flex-direction: column;

    @media screen and (max-width: 825px) {
      align-items: center;
    }
  }

  .left {
    width: 31.7rem;
    gap: 2.125rem;
    max-width: 100%;
  }

  .right {
    width: 35rem;
    max-width: 100%;
    gap: 3rem;
    justify-content: center;
    align-items: center;

    & > p {
      @include body-1;
      color: $gray-400;
    }
  }

  .data-cards {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
</style>
