---
import Stat from "./Stat.astro";
---

<div class="stadistics">
  <Stat stadistic="4 Y." text="Experience" />
  <Stat stadistic="5+" text="Project completed" />
  <Stat stadistic="20+" text="Technologies" />
</div>

<style lang="scss">
  .stadistics {
    width: 100%;
    display: flex;
    height: 6.625rem;
    border-radius: 0.375rem;
    gap: 0.125rem;
    overflow: hidden;

    @media screen and (max-width: 600px) {
      flex-direction: column;
      height: auto;
    }
  }
</style>