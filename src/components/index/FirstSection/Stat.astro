---
interface Props {
  stadistic: string
  text: string
}

const { stadistic, text }: Props = Astro.props;
---

<div class="stat">
  <b>{ stadistic }</b>
  <p>{ text }</p>
</div>

<style lang="scss">
  @import 'src/styles/variables.scss';

  .stat {
    background-color: $secondary-100-transparent;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: .5rem;
    align-items: center;
    justify-content: center;

    & b {
      font-size: 2rem;
      color: $gray-700;
      font-weight: 600;
    }
    & p {
      color: $gray-500;
    }
  }
</style>
