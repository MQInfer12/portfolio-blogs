---
interface Props {
  stadistic: string
  text: string
}

const { stadistic, text }: Props = Astro.props;
---

<div class="stat">
  <b>{ stadistic }</b>
  <p>{ text }</p>
</div>

<style>
  .stat {
    background-color: var(--secondary-100-transparent);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: .5rem;
    align-items: center;
    justify-content: center;
  }

  .stat b {
    font-size: 2rem;
    color: var(--gray-700);
    font-weight: 600;
  }

  .stat p {
    color: var(--gray-500);
  }
</style>