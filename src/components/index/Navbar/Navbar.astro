---
import Links from "./Links.astro";
import Logo from "./Logo.astro";
---

<nav class="navbar">
  <Logo />
  <Links />
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    height: var(--navbar-height);
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    z-index: 5;
    background-color: var(--white);
  }
</style>