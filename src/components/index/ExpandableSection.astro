---
interface Props {
  black?: boolean
  gray?: boolean
  id?: string
}

const { black, gray, id } = Astro.props;
---

<section class:list={{black, gray}} id={id}>
  <slot />
</section>

<style lang="scss">
  @import '/src/styles/variables';
  
  section {
    background-color: $white;
    display: flex;
    flex-direction: column;
    gap: 3.125rem;
    align-items: center;
    justify-content: center;
    padding: 6.25rem 2rem;

    @media screen and (max-width: 825px) {
      flex-direction: column;
      align-items: center;
    }
  }

  .black {
    background-color: $gray-900;
  }

  .gray {
    background-color: $gray-50;
  }
</style>