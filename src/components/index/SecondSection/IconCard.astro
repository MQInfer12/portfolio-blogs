---
import IconBlock from '../../global/IconBlock.astro';
---

<div class="icon-card-container">
  <IconBlock padding="1.25rem" size="1.25rem">
    <slot name="1" />
  </IconBlock>
  <IconBlock padding="1.25rem" size="1.25rem">
    <slot name="2" />
  </IconBlock>
  <IconBlock padding="1.25rem" size="1.25rem">
    <slot name="3" />
  </IconBlock>
  <IconBlock padding="1.25rem" size="1.25rem">
    <slot name="4" />
  </IconBlock>
</div>

<style lang="scss">
  @import '/src/styles/variables';
  
  .icon-card-container {
    padding: 2rem;
    display: flex;
    max-width: calc(6rem + 120px);
    gap: 2rem;
    background-color: $white;
    border-radius: .75rem;
    flex-wrap: wrap;
  }

  .text {
    width: 15.5rem;
    display: flex;
    flex-direction: column;
    gap: .75rem;
  }

  h3 {
    @include heading-5;
  }

  p {
    @include body-2;
  }
</style>