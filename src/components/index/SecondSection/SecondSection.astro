---
import Description from "./Description.astro";
import IconCard from "./IconCard.astro";
---

<section class="second-section" id="tools">
  <Description >
    <div class="columns">
      <div class="row">
        <IconCard >
          <i class="fa-brands fa-react" slot="1"></i>
          <i class="fa-brands fa-angular" slot="2"></i>
          <i class="fa-brands fa-square-js" slot="3"></i>
          <i class="fa-brands fa-node-js" slot="4"></i>
        </IconCard>
        <IconCard >
          <i class="fa-brands fa-html5" slot="1"></i>
          <i class="fa-brands fa-css3-alt" slot="2"></i>
          <i class="fa-brands fa-bootstrap" slot="3"></i>
          <i class="fa-brands fa-sass" slot="4"></i>
        </IconCard>
      </div>
      <div class="row">
        <IconCard >
          <i class="fa-brands fa-git-alt" slot="1"></i>
          <i class="fa-brands fa-github" slot="2"></i>
          <i class="fa-brands fa-gitlab" slot="3"></i>
          <i class="fa-brands fa-trello" slot="4"></i>
        </IconCard>
        <IconCard >
          <i class="fa-brands fa-laravel" slot="1"></i>
          <i class="fa-brands fa-python" slot="2"></i>
          <i class="fa-brands fa-php" slot="3"></i>
          <i class="fa-brands fa-node" slot="4"></i>
        </IconCard>
      </div>
    </div>
  </Description>
</section>

<script>
  import changeActive from "../../../utilities/changeActive";
  const icons = document.querySelectorAll('.icon-card-container .icon-container');
  changeActive(icons, 2500);
</script>

<style lang="scss">
  @import '/src/styles/variables';
  
  .second-section {
		scroll-margin: -7rem;
    min-height: calc(100dvh - $navbar-height);
    background-color: $gray-50;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 9rem;
    padding: 2rem;

    @media screen and (max-height: 770px) {
		  scroll-margin: -4rem;
    }

    @media screen and (max-width: 1200px) {
      gap: 4rem;
    }

    @media screen and (max-width: 1050px) {
      flex-direction: column;
      gap: 0;
		  scroll-margin: 0;
    }
  }

  .columns {
    display: flex;
    gap: 1.5rem;

    @media screen and (max-width: 1050px) {
      justify-content: center;
      flex-wrap: wrap;
    }
  }

  .row {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;

    &:first-child {
      margin-bottom: 1.5rem;
    }
    &:last-child {
      margin-top: 1.5rem;
    }

    @media screen and (max-width: 1050px) {
      &:first-child {
        margin-bottom: 0;
      }
      &:last-child {
        margin-top: 0;
      }
    }
  }
</style>