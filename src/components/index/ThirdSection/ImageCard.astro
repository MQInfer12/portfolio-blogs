---
import Link from "../../global/Link.astro";

interface Props {
  src: string
  category: string
  title: string
  description: string
  to: string;
  blank?: boolean;
}

const { category, description, src, title, to, blank }: Props = Astro.props;
---

<div class="card">
  <img src={src} />
  <div>
    <small>{ category }</small>
    <h3>{ title }</h3>
    <p>{ description }.</p>
    <div>
      <Link text="Visit" to={to} white blank={blank} >
        <i class="fa-solid fa-arrow-right" slot="right"></i>
      </Link>
    </div>
  </div>
</div>

<style lang="scss">
  @import '/src/styles/variables';
  
  .card {
    display: flex;
    flex-direction: column;
    box-shadow: $box-shadow-200;
    width: 26.5rem;
    border-radius: 1rem;
    overflow: hidden;

    & > img {
      width: 100%;
      height: 15.5rem;
      object-fit: cover;
    }

    & > div {
      padding: 2rem;

      & > small {
        color: $gray-400;
        font-size: .75rem;
        font-weight: 500;
        text-transform: uppercase;
      }
      & > h3 {
        color: $gray-900;
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: .75rem;
        margin-top: .25rem;
      }
      & > p {
        color: $gray-600;
        font-size: .875rem;
        margin-bottom: 1.25rem;
        line-height: 1.25rem;
      }
    }
  }
</style>