---
import Link from "../../global/Link.astro";
import ExpandableSection from "../ExpandableSection.astro";
import CardGrid from "./CardGrid.astro";
import Description from "./Description.astro";
import ImageCard from "./ImageCard.astro";
import PsicotestLanding from "/src/assets/images/index/psicotest_landing.png";
import TourismLanding from "/src/assets/images/index/tourism_landing.png";
import LZLanding from "/src/assets/images/index/lz_landing.png";
import TomattoLanding from '/src/assets/images/index/tomatto_landing.png';
import CubiertoApp from '/src/assets/images/index/cubierto_app.png';
import CatastroLanding from '/src/assets/images/index/catastro_landing.png';
---

<ExpandableSection animate>
  <Description id="projects" />
  <CardGrid 
    childWidth="26.5rem"
    maxPerRow={3} 
  >
    <ImageCard
      category="React JS - Laravel"
      title="Psicotest"
      description="A web application of customizable psychological tests that can be easily shared with QR or direct link, it also includes a calendar for appointments and a realtime chat to solve doubts."
      src={PsicotestLanding}
      to="https://psicotest.cidtec-uc.com/#/"
      repositorie="https://github.com/MQInfer12/psicotest"
      blank
    />
    <ImageCard
      category="React Native TS - React TS - Express TS"
      title="Cubierto"
      description="A hybrid bidding application for the city of Cochabamba designed to avoid food waste in collaboration with the city's restaurants, suppliers and charities."
      src={CubiertoApp}
      to="https://cubierto.cidtec-uc.com/"
      googlePlay="https://play.google.com/store/apps/details?id=com.mqinfer12.cubierto"
      repositorie="https://github.com/MQInfer12/cubierto-app.git"
      blank
    />
    <ImageCard
      category="React JS - Flask"
      title="Doctor Tomatto"
      description="An artificial intelligence web application that detects tomato leaf diseases and shows infected areas on a map, is a very useful tool for interested growers."
      src={TomattoLanding}
      to="http://marcianoquantico.pythonanywhere.com/"
      blank
    />
    <ImageCard
      category="Svelte TS - .NET Core 7"
      title="Cadastre Cercado"
      description="A map portal designed to be used by the citizens of Cochabamba/Bolivia in a way that can be intuitive and easy to use, developed in the installations of Cadastre Cercado."
      src={CatastroLanding}
      repositorie="https://github.com/MQInfer12/catastro-portal"
      to="https://catastro-cocha.web.app/"
      blank
    />
    <ImageCard
      category="Angular - React JS - Laravel"
      title="Tourism Cochabamba"
      description="A tourism application developed for the Cochabamba/Bolivia mayor's office to show attractions and events in the city in detail and in 360ยบ, it has an administrator page to modify data."
      src={TourismLanding}
      to="https://cochabamba-turismo.web.app/#/"
      blank
    />
    <!-- repositorie="https://github.com/CJJOM/CIDTEC_PROY_ALCALDIA-v1-" -->
    <ImageCard
      category="React TS - Express TS"
      title="LZ Shopping"
      description="A web application for a clothing store in Bolivia, in wich you can search, filter and reserve products by your CI number, includes an administrator page for modify data and confirm reserves."
      src={LZLanding}
      to="https://lz-shopping.web.app/#/" 
      repositorie="https://github.com/MQInfer12/lz-shopping"
      blank
      disabled
    />
  </CardGrid>
  <Link 
    text="More Projects"
    to="#"
    primary
    disabled
  />
</ExpandableSection>

<style lang="scss">
  @import '/src/styles/variables';
  
  section {
    background-color: $white;
    display: flex;
    flex-direction: column;
    gap: 3.125rem;
    align-items: center;
    justify-content: center;
    padding: 6.25rem 0;
  }
</style>