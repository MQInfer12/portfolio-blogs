---
interface Props {
  primary?: boolean
}

const { primary }: Props = Astro.props;
---

<strong class:list={['strong', { 'strong-primary': primary }]}><slot/></strong>

<style lang="scss">
  @import '/src/styles/variables.scss';

  .strong {
    font-weight: 500;
    position: relative;
    isolation: isolate;
  }

  .strong-primary::after {
    content: "";
    width: 100%;
    height: 25%;
    background-color: $primary-500;
    opacity: 0.5;
    position: absolute;
    bottom: 0.2rem;
    left: 0;
    z-index: -1;
  }
</style>