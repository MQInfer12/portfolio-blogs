---
interface Props {
  src: string
  alt: string
  width: string
  height: string
}

const { src, alt, height, width }: Props = Astro.props;
---

<img src={src} alt={alt} />

<style lang="scss" define:vars={{ height, width }}>
  @import '/src/styles/variables.scss';
  
  img {
    height: var(--height);
    width: var(--width);
    border-radius: 1.5rem;
    object-fit: cover;
  }
</style>